generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id          String   @id @default(uuid())
  provider    String
  referenceId String   @unique
  amount      Int
  currency    String
  status      Status   @default(pending)
  createdAt   DateTime @default(now())
}

enum Status {
  pending
  success
  failed
}
